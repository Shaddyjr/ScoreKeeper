                    />
                <TextView
                    android:id="@+id/bot_death"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="casual"
                    android:includeFontPadding="false"
                    />

                <!--decrease-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="-1 Death"
                    android:textColor="@color/deathop"
                    android:background="@drawable/custom_button_death"
                    android:tag="death,bot,-"
                    android:onClick="change_score"
                    android:fontFamily="casual"
                    android:includeFontPadding="false"
                    />
            </LinearLayout>
            <!--separator-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:text="/"
                android:layout_gravity="center_vertical"
                android:fontFamily="casual"
                android:includeFontPadding="false"
                />

            <!--Assists-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!--increase-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="+1 Assist"
                    android:textColor="@color/assist"
                    android:background="@drawable/custom_button_assistop"
                    android:tag="assist,bot,+"
                    android:onClick="change_score"
                    android:fontFamily="casual"
                    android:includeFontPadding="false"
                    />
                <TextView
                    android:id="@+id/bot_assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="casual"
                    android:includeFontPadding="false"
                    />

                <!--decrease-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="-1 Assist"
                    android:textColor="@color/assistop"
                    android:background="@drawable/custom_button_assist"
                    android:tag="assist,bot,-"
                    android:onClick="change_score"
                    android:fontFamily="casual"
                    android:includeFontPadding="false"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom Team"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:fontFamily="casual"
            android:includeFontPadding="false"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Reset"
            android:onClick="reset"
            android:fontFamily="casual"
            android:includeFontPadding="false"
            />

    </LinearLayout>

</RelativeLayout>
